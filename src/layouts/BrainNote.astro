---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Sidebar from '../components/Sidebar.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const { title } = Astro.props;
---
<html lang="en">
	<head>
		<BaseHead title={title} description={SITE_DESCRIPTION} />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.15.2/dist/katex.min.css"
      integrity="sha384-MlJdn/WNKDGXveldHDdyRP1R4CTHr3FeuDNfhsLPYrq2t0UBkUdK2jyTnXPEK1NQ" crossorigin="anonymous"
    >
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main class="flex mb-12 max-w-6xl mx-auto px-2 sm:px-4 min-h-[80vh] my-8">
      <Sidebar/>
      <section class="max-w-3xl mx-auto min-h-[80vh]">
        <div class="flex flex-col space-y-2">
          <h1 class="text-4xl font-bold bg-blue-600 px-4 py-2 mb-6">
            {title}
          </h1>
        </div>
        <article class="prose prose-quoteless prose-neutral dark:prose-invert text-lg text-justify mb-8">
          <slot />
        </article>
      </section>
		</main>
		<Footer/>
	</body>
</html>